@model Car
@{
    ViewData["Title"] = "Create";
}

<header class="main-header navbar">
    <div class="col-search">
        <form class="searchform">
            <div class="input-group">
                <input list="search_terms" type="text" class="form-control" placeholder="Axtarış edin" />
                <button class="btn btn-light bg" type="button"><i class="material-icons md-search"></i></button>
            </div>
            <datalist id="search_terms">
                <option value="Products"></option>
                <option value="New orders"></option>
                <option value="Apple iphone"></option>
                <option value="Ahmed Hassan"></option>
            </datalist>
        </form>
    </div>
    <div class="col-nav">
        <button class="btn btn-icon btn-mobile me-auto" data-trigger="#offcanvas_aside"><i class="material-icons md-apps"></i></button>
        <ul class="nav">
            <li class="nav-item">
                <a class="nav-link btn-icon" href="#">
                    <i class="material-icons md-notifications animation-shake"></i>
                    <span class="badge rounded-pill">3</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link btn-icon darkmode" href="#"> <i class="material-icons md-nights_stay"></i> </a>
            </li>
            <li class="nav-item">
                <a href="#" class="requestfullscreen nav-link btn-icon"><i class="material-icons md-cast"></i></a>
            </li>
            <li class="dropdown nav-item">
                <a class="dropdown-toggle" data-bs-toggle="dropdown" href="#" id="dropdownLanguage" aria-expanded="false"><i class="material-icons md-public"></i></a>
                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownLanguage">
                    <a class="dropdown-item text-brand" href="#"><img src="~/admin/assets/imgs/theme/flag-us.png" alt="English" />English</a>
                    <a class="dropdown-item" href="#"><img src="~/admin/assets/imgs/theme/flag-fr.png" alt="Français" />Français</a>
                    <a class="dropdown-item" href="#"><img src="~/admin/assets/imgs/theme/flag-jp.png" alt="Français" />日本語</a>
                    <a class="dropdown-item" href="#"><img src="~/admin/assets/imgs/theme/flag-cn.png" alt="Français" />中国人</a>
                </div>
            </li>
            <li class="dropdown nav-item">
                <a class="dropdown-toggle" data-bs-toggle="dropdown" href="#" id="dropdownAccount" aria-expanded="false"> <img class="img-xs rounded-circle" src="~/admin/assets/imgs/people/avatar-2.png" alt="User" /></a>
                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownAccount">
                    <a class="dropdown-item" href="#"><i class="material-icons md-perm_identity"></i>Profilə düzəliş et</a>
                    <a class="dropdown-item" href="#"><i class="material-icons md-settings"></i>Hesab Tənzimləmələri</a>
                    <a class="dropdown-item" href="#"><i class="material-icons md-account_balance_wallet"></i>Pul kisəsi</a>
                    <a class="dropdown-item" href="#"><i class="material-icons md-receipt"></i>Faturalandırma</a>
                    <a class="dropdown-item" href="#"><i class="material-icons md-help_outline"></i>Yardım mərkəzi</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item text-danger" href="#"><i class="material-icons md-exit_to_app"></i>Çıxış</a>
                </div>
            </li>
        </ul>
    </div>
</header>
<section class="content-main">
    <div class="row container justify-content-sm-between">
        <div class="col-12">
            <div class="content-header">
                <h2 class="content-title">Yeni Məhsul əlavə edin</h2>
            </div>
        </div>
        <div class="col-lg-7">
            <div class="card mb-4">
                <div class="card-header">
                    <h4>Əsas</h4>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" placeholder="Bura yazın" class="form-control" />
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Brand" class="form-label"></label>
                            <textarea asp-for="Brand" placeholder="Bura yazın" class="form-control" rows="4"></textarea>
                            <span class="text-danger" asp-validation-for="Brand"></span>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="mb-4">
                                    <label asp-for="Model" class="form-label"></label>
                                    <div class="row gx-2">
                                        <input placeholder="₼" asp-for="Model" class="form-control" />
                                        <span class="text-danger" asp-validation-for="Model"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="mb-4">
                                    <label asp-for="Seats" class="form-label"></label>
                                    <div class="row gx-2">
                                        <input asp-for="Seats" class="form-control" />
                                        <span class="text-danger" asp-validation-for="Seats"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="mb-4">
                                    <label asp-for="CarDoor" class="form-label"></label>
                                    <div class="row gx-2">
                                        <input asp-for="CarDoor" class="form-control" />
                                        <span class="text-danger" asp-validation-for="CarDoor"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="mb-4">
                                    <label asp-for="Luggage" class="form-label"></label>
                                    <div class="row gx-2">
                                        <input asp-for="Luggage" class="form-control" />
                                        <span class="text-danger" asp-validation-for="Luggage"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="mb-4">
                                <label asp-for="Transmission" class="form-label"></label>
                                <div class="row gx-2">
                                    <input asp-for="Transmission" class="form-control" />
                                    <span class="text-danger" asp-validation-for="Transmission"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="mb-4">
                                <label asp-for="MinimumAge" class="form-label"></label>
                                <div class="row gx-2">
                                    <input asp-for="MinimumAge" class="form-control" />
                                    <span class="text-danger" asp-validation-for="MinimumAge"></span>
                                </div>
                            </div>
                        </div>
</div>
                </div>
                        <div class="mb-4 d-flex justify-content-end">
                            <div>
                                <button type="submit" class="btn btn-md rounded font-sm hover-up ms-auto">Yaradın</button>
                                <a asp-action="Index" class="btn btn-google rounded font-sm hover-up ms-auto">Geri gayıt</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- card end// -->
        </div>
    </div>
</section>
<partial name="_ValidationPartial" />
@section scripts{
    <script>
        $(".form-select").select2();
    </script>
}
